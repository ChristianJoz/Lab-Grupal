<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="#4EAFEA"
            card_view:cardCornerRadius="5dp"
            card_view:cardElevation="3dp">

            <RelativeLayout
                android:layout_width="249dp"
                android:layout_height="373dp"
                android:background="#4EAFEA"
                android:padding="0dp">

                <TextView
                    android:id="@+id/textViewNombre_Producto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:onClick="siguiente"
                    android:text="* Nombre Producto: "
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewNombreProducto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewNombre_Producto"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textViewDescripcionProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewNombreProducto1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:text="* Descripcion Producto"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewDescripcionProducto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewDescripcionProducto"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textViewCantidadProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewDescripcionProducto1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:text="* Cantidad Producto"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewCantidadProducto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewCantidadProducto"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textViewPrecioProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewCantidadProducto1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:text="* Cantidad Producto"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewPrecioProducto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewPrecioProducto"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textViewEstadoProducto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewCantidadProducto1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:text="* Cantidad Producto"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewEstadoProducto1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewEstadoProducto"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/textViewIdCategoria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewEstadoProducto1"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:text="* Cantidad Producto"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewIdCategoria1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textViewIdCategoria"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="1dp"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:textColor="#000"
                    android:textStyle="normal" />

            </RelativeLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
